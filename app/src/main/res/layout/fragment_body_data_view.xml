<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="3">

        <TextView
            android:id="@+id/bodyDataWeightText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Weight (kg)" />

        <TextView
            android:id="@+id/bodyDataWeightEditText"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_height="35dp"
            android:text="75"
            android:inputType="numberDecimal"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/bodyDataArmText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Arm (cm)" />

        <TextView
            android:id="@+id/bodyDataArmEditText"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:textAlignment="center"
            android:text="41"
            android:inputType="numberDecimal"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/bodyDataChestText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Chest (cm)" />

        <TextView
            android:id="@+id/bodyDataChestEditText"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:textAlignment="center"
            android:text="70"
            android:inputType="numberDecimal"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/bodyDataWaistText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Waist (cm)" />

        <TextView
            android:id="@+id/bodyDataWaistEditText"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:textAlignment="center"
            android:text="41"
            android:inputType="numberDecimal"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/bodyDataLegText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Leg (cm)" />

        <TextView
            android:id="@+id/bodyDataLegEditText"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:textAlignment="center"
            android:text="41"
            android:inputType="numberDecimal"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/bodyDataDateText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Date" />

        <TextView
            android:id="@+id/bodyDataDateEditText"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:textAlignment="center"
            android:text="03-12-2021"
            android:inputType="date"
            android:textSize="12sp"/>
    </LinearLayout>

    <ImageButton
        android:id="@+id/deleteBodyDataButton"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_baseline_delete_24"
        android:layout_gravity="center"
        android:background="#FF0000"/>

</LinearLayout>
